pipeline {

  agent any

  environment {
    SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
        sh 'mkdir -p creds' 
        sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./creds/serviceaccount.json'
      }
    }

    stage('TF init') {
      steps {
        container('terraform') {
          sh 'terraform init'
        }
      }      
    }

    stage('TF destroy') {
      steps {
        container('terraform') {
          sh 'terraform destroy'
          
        }
      }      
    }

    

   
  } 

}
